#include <stdio.h>
#include <stdlib.h>

int main()
{
    int input;
    int i;
    int j=1;

    scanf("size=%d", &input);

    if(input <=1 || input >7)
    {
        printf("The input must be in the range [1;7].");
    }

    else
    {
        while(input>=j)
        {
            for(i=1;i<=input;i++)
                {
                    if(i/input !=1)
                    {
                        printf("#O");
                    }
                    else
                    {
                        printf("#");
                    }
                }
                j++;
                printf("\n");


        }
    }

}
