#include <stdio.h>
#include <stdlib.h>
#include <math.h>


int main()
{
  float x1,y1,x2,y2,x3,y3,d1,d2,d3,perimeter;
  scanf("%f %f %f %f %f %f", &x1, &y1, &x2, &y2, &x3, &y3);
  d1=sqrt((x2-x1)*(x2-x1)+(y2-y1)*(y2-y1));
  d2=sqrt((x3-x2)*(x3-x2)+(y3-y2)*(y3-y2));
  d3=sqrt((x3-x1)*(x3-x1)+(y3-y1)*(y3-y1));
  perimeter= d1+d2+d3;
  printf("The triangle perimeter is %.2f", perimeter);


}
