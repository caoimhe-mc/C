#include <stdio.h>
#include <stdlib.h>

int min(int array[], int size)
{
    int i, min;

    for(i=0, min=array[0]; i<size ; i++)
    {
        if(array[i]< min)
        {
            min=array[i];
        }
    }
    return min;
}

int main()
{
    int a[] = {-2, -4, -6, -1};
    printf("%d", min(a, 4));
    return 0;
}
